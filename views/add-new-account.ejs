<%- include("header") -%>
<body>
    <div class="row">
        <div class="col-lg-2 col-md-4 side-bar-main">
            <%- include("side-bar") -%>
        </div>
        <div class="col-lg-10 col-md-8 main-content">
            <div class="row">
                <div class="col-12 main-content-header">
                    <h1 class="text-center">Add New Account</h1>
                </div>
            </div>
            <div class="row">
                <form action="">
                    <div class="form-row">
                        <div class="col-6">
                            <span>Account Name</span>
                        </div>
                        <div class="col-6">
                            <input type="text" class="form-control">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-6">
                            <span>Account Type</span>
                        </div>
                        <div class="col-6">
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="account_type" id="checkings-account">
                                <label for="checkings-account">Checking Account</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="account_type" id="savings-account">
                                <label for="savings-account">Savings Account</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="account_type" id="credit-card">
                                <label for="credit-card">Credit Card</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="account_type" id="investment-account">
                                <label for="investment_account">Investment Account</label>
                            </div>
                            <div class="input-group">
                                <div class="input-group-text">
                                    <input class="form-check-input mt-0" type="radio" name="account_type" aria-label="Radio button for following text input">
                                </div>
                                <span class="input-group-text">Other</span>
                                <input type="text" class="form-control" aria-label="Text input with radio button">
                              </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-6">
                            <span>Starting Balance</span>
                        </div>
                        <div class="col-6">
                            <input type="text" class="form-control">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>